@page "/blog"

<h1>Blog</h1>

@if (Blogs == null)
{
    <div class="spinner"></div>
}
else if (!Blogs.Any())
{
    <p><em>Surprise, nothing here yet!</em></p>
}
else
{
    foreach (var blog in Blogs)
    {
        <h2>@blog.Title</h2>
        <div class="col-form-label-sm">@blog.Date.ToString("D")</div>
        <p>@blog.Content</p>
    }
}

